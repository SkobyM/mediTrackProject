<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/doctorHomePage"
    android:background="@color/doctor_bg"
    android:orientation="vertical"
    tools:context=".Doctor_HomePage">

  <FrameLayout
      android:id="@+id/doctor_fragment_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/doctor_bottomNavigationView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="@null"
      android:background="@drawable/bg_nav_menu_doctor"
      app:itemIconTint="@color/white"
      app:itemTextColor="@color/white"
      android:layout_marginBottom="-15dp"
      app:itemBackground="@drawable/bg_nav_item_selector_doctor"
      app:itemTextAppearanceActive="@style/ActiveTextForMenu"
      app:itemActiveIndicatorStyle="@null"
      app:menu="@menu/doctor_bottom_nav_menu"/>

</LinearLayout>