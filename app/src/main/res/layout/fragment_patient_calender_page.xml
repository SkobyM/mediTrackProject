<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient_patient"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="40dp"
    android:paddingBottom="16dp"
    tools:context=".PatientCalenderPageFragment">

    <!-- Header Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/supportImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_headset_mic_24_patient"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/support_button" />

            <ImageView
                android:id="@+id/notificationImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications_24_patient"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_button" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/heartLogoImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_logo" />
    </LinearLayout>

    <!-- Calendar Month -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/viewCalendarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/patient_nav_calender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar_today_24"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/calender_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_calendar"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/yearMonthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/month_select_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calender_left_arrow"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/previous_month" />

            <TextView
                android:id="@+id/yearMonthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calenderYearMonth"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/month_select_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/next_month"
                android:src="@drawable/calender_right_arrow" />
        </LinearLayout>
    </LinearLayout>

