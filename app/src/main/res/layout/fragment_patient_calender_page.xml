<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="28dp"
    android:paddingEnd="28dp"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    tools:context=".PatientCalenderPageFragment"
    android:background="@drawable/bg_soft_gradient_patient">

    <LinearLayout
        android:id="@+id/layout_top_calendar_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <!-- View Calendar Row -->
        <LinearLayout
            android:id="@+id/layout_view_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/icon_calendar"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:contentDescription="Calendar Icon"
                android:src="@drawable/outline_calendar_month_24" />

            <TextView
                android:id="@+id/text_view_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Calendar"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>




</FrameLayout>