<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient_patient"
    android:paddingStart="28dp"
    android:paddingTop="40dp"
    android:paddingEnd="28dp"
    android:paddingBottom="40dp"
    tools:context=".PatientCalenderPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/patientCalenderPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    support image view (Headset) -->
        <ImageView
            android:id="@+id/supportImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/support_button"
            android:src="@drawable/ic_headset_mic_24_patient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notificationImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:contentDescription="@string/notfication_button"
            android:focusable="true"
            android:src="@drawable/ic_notifications_24_patient"
            app:layout_constraintStart_toEndOf="@+id/supportImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <!-- Calendar Month -->

        <ImageView
            android:id="@+id/patient_nav_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/calender_icon"
            android:src="@drawable/ic_calendar_month_24_patient_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supportImageView" />

        <TextView
            android:id="@+id/viewCalendarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/inter_bold"
            android:text="@string/view_calendar"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/patient_nav_calender"
            app:layout_constraintTop_toBottomOf="@id/supportImageView" />


        <ImageView
            android:id="@+id/month_select_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:contentDescription="@string/previous_month"
            android:focusable="true"
            android:src="@drawable/calender_left_arrow"
            app:layout_constraintStart_toEndOf="@id/viewCalendarTextView"
            app:layout_constraintTop_toBottomOf="@id/supportImageView" />


        <TextView
            android:id="@+id/yearMonthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/month_select_left"
            app:layout_constraintTop_toBottomOf="@id/supportImageView" />

        <ImageView
            android:id="@+id/month_select_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:contentDescription="@string/next_month"
            android:focusable="true"
            android:src="@drawable/calender_right_arrow"
            app:layout_constraintStart_toEndOf="@id/yearMonthTextView"
            app:layout_constraintTop_toBottomOf="@id/supportImageView" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/daysRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/month_select_right"
            tools:listitem="@layout/card_patient_item_day_calender" />


        <LinearLayout
            android:id="@+id/daysLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daysRecyclerView">

            <TextView
                android:id="@+id/dayNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/red"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/dayNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/red"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/theScheduledMedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_scheduled_medicines"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daysLinearLayout" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/theScheduledMedTextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medRecyclerViewCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/theScheduledMedTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>